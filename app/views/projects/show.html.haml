%h1.page-header
  = @project.title

%p
  = project_dates_label(@project)
  = project_finalized_label(@project.finalized?)
  = metadata_label

- if @project.finalized?
  = render 'summary'
  = render 'payouts'
- else
  = render 'form'
  - if @project.entries.any?
    = render 'entries'
  - else
    %h2 No entries

.metadata-content
  %dl.dl-horizontal.small
    %dt Created
    %dd
      = fa_icon('calendar')
      = moment(@project.created_at, true)
    - if @project.finalized?
      %dt Finalized
      %dd
        = fa_icon('calendar')
        = moment(@project.finalized_at, true)
      %dt
      %dd
        = fa_icon('user')
        = @project.finalizer
