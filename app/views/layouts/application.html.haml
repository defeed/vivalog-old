!!!
%html
  %head
    %title VIVALog
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      - if user_signed_in?
        %p
          = current_user \
          = link_to 'Sign out', destroy_user_session_path, method: :delete
      = yield
