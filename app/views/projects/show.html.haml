%h1
  = @project.title
  - if @project.date
    %small= moment(@project.date)

%p
  = project_finalized_label(@project.finalized?)
  = metadata_label

- if @project.finalized?
  = render 'summary'
- else
  = render 'form'

.metadata-content
  %dl.dl-horizontal.small
    %dt Created
    %dd
      = fa_icon('calendar')
      = moment(@project.created_at, true)
    - if @project.finalized?
      %dt Finalized
      %dd
        = fa_icon('calendar')
        = moment(@project.finalized_at, true)
      %dt
      %dd
        = fa_icon('user')
        = @project.finalizer

%h2 Entries
.table-responsive
  %table.table.bordered
    %thead
      %tr
        %th Name
        %th Date
        %th Type
        %th Workers
        %th Coeff
        - if @project.finalized?
          %th Pay
        - unless @project.finalized?
          %th
    %tbody
      - @project.entries.each do |entry|
        %tr
          %td= entry.user
          %td= moment(entry.worked_on)
          %td= I18n.t("work_types.#{entry.work_type}")
          %td= entry.workers
          %td= entry.coefficient
          - if @project.finalized?
            %td= eur(entry.payout.amount)
          - unless @project.finalized?
            %td= link_to fa_icon('trash-o'), entry_path(entry), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'
