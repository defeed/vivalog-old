%h1.page-header
  = @user
  %small= "#{@user.email}"

%p
  = role_label(@user.role)
  = status_label(@user.is_active?)
  = metadata_label

.metadata-content
  %dl.dl-horizontal.small
    %dt= t('info.registered')
    %dd
      = fa_icon('calendar')
      = moment(@user.created_at, true)
    - if @user.reset_password_sent_at
      %dt= t('info.password_sent')
      %dd
        = fa_icon('calendar')
        = moment(@user.reset_password_sent_at, true)

- if can? :update, User
  = render 'form'
