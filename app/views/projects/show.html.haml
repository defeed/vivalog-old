%h1
  = @project.title
  - if @project.date
    %small= moment(@project.date)

%p
  = project_finalized_label(@project.finalized?)
  %span.label.label-default#metadata-popover{ title: 'Information' }
    = fa_icon('calendar')

= render 'form'

#metadata-content{ style: 'display: none' }
  %ul.list-unstyled.text-muted.small
    %li
      Created
      = moment(@project.created_at, true)
    - if @project.finalized?
      %li
        Finalized
        = moment(@project.finalized_at, true)

.table-responsive
  %table.table.bordered
    %thead
      %tr
        %th Name
        %th Date
        %th Type
        %th Workers
        %th Coeff
        %th
    %tbody
      - @entries.each do |entry|
        %tr
          %td Herp Derp
          %td
            %time.moment{ datetime: entry.worked_on }
          %td= entry.work_type
          %td= entry.workers
          %td= entry.coefficient
          %td= link_to fa_icon('trash-o'), entry_path(entry), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'
