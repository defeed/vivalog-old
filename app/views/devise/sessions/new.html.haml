.row
  .col-lg-4.col-lg-offset-4.col-sm-6.col-sm-offset-3
    .well.well-default
      %h3= t('users.sign_in_header')

      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, required: true, autofocus: true, label: t('users.attributes.email')
          = f.input :password, required: true, label: t('users.attributes.password')

        .form-actions
          = button_tag(type: :submit, class: 'btn btn-block btn-primary') do
            = fa_icon('sign-in', text: t('users.sign_in'))
          = render 'devise/shared/links'
