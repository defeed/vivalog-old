- if controller_name != 'sessions'
  = link_to t('users.sign_in_header'), new_session_path(resource_name), class: 'btn btn-link'

- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('users.sign_up_header'), new_registration_path(resource_name), class: 'btn btn-link'

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t('users.forgot_password'), new_password_path(resource_name), class: 'btn btn-link'
