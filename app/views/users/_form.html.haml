- if @user.new_record?
  %h2= t('users.new_user')
.well.well-default
  = simple_form_for @user do |form|
    = form.error_notification
    .row
      .col-md-3.col-xs-12
        = form.input :name, label: t('users.attributes.name')
      .col-md-3.col-xs-12
        = form.input :email, label: t('users.attributes.email')
      - if can? :manage, User
        .col-md-4.col-xs-6
          = form.input :role, collection: roles_for_select, label: t('users.attributes.role'), prompt: t('forms.choose_role')
        .col-md-2.col-xs-6
          = form.input :hourly_rate, label: t('users.attributes.hourly_rate'), placeholder: 'â‚¬'
    .row
      .col-md-12
        - if @user.persisted?
          = form.submit t('forms.save'), class: 'btn btn-primary'
          - if can? :manage, User
            = activate_button(@user)
          = link_to fa_icon('send-o', text: t('forms.send_new_password')), reset_password_user_path(@user), class: 'btn btn-default', data: { confirm: t('forms.are_you_sure') }
        - else
          = form.submit t('forms.create'), class: 'btn btn-primary'
