- if @project.new_record?
  %h2= t('projects.new_project')
.well.well-default
  = simple_form_for @project do |form|
    = form.error_notification
    .row
      .col-md-4
        = form.input :title, label: t('projects.attributes.title')
      .col-md-4.col-xs-6
        = form.input :start_on, as: 'string', label: t('projects.attributes.start_on'), input_html: { class: 'datepicker', value: form.object.start_on.try(:strftime, '%d.%m.%Y') }
      .col-md-4.col-xs-6
        = form.input :end_on, as: 'string', label: t('projects.attributes.end_on'), input_html: { class: 'datepicker', value: form.object.end_on.try(:strftime, '%d.%m.%Y') }
    .row
      .col-md-3.col-xs-6
        = form.input :volume, label: t('projects.attributes.volume'), placeholder: 'mÂ²'
      .col-md-3.col-xs-6
        = form.input :price_receive, label: t('projects.attributes.price_receive')
      .col-md-3.col-xs-6
        = form.input :price_polish, label: t('projects.attributes.price_polish')
      .col-md-3.col-xs-6
        = form.input :hourly_rate, label: t('projects.attributes.hourly_rate')
    .row
      .col-md-12
        - if @project.persisted?
          = form.submit t('forms.save'), class: 'btn btn-primary'
          = link_to fa_icon('check-square-o', text: t('forms.finalize')), finalize_project_path(@project), class: 'btn btn-success', method: :patch
          = link_to fa_icon('trash-o', text: t('forms.delete')), project_path(@project), method: :delete, data: { confirm: t('forms.are_you_sure') }, class: 'btn btn-danger'
        - else
          = form.submit t('forms.create'), class: 'btn btn-primary'
