.row
  .col-lg-4.col-lg-offset-4.col-sm-6.col-sm-offset-3
    .well.well-default
      %h3= t('users.new_password')

      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = f.error_notification

        = f.input :reset_password_token, as: :hidden
        = f.full_error :reset_password_token

        .form-inputs
          = f.input :password, label: t('users.new_password'), required: true, autofocus: true
          = f.input :password_confirmation, label: t('users.password_confirmation'), required: true

        .form-actions
          = button_tag(type: :submit, class: 'btn btn-block btn-primary') do
            = fa_icon('key', text: t('users.set_new_password'))
          = render 'devise/shared/links'
