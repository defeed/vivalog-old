.row
  .col-md-4.col-md-offset-4
    .well.well-default
      %h3= t('users.new_password')

      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = f.error_notification

        = f.input :reset_password_token, as: :hidden
        = f.full_error :reset_password_token

        .form-inputs
          = f.input :password, label: t('users.new_password'), required: true, autofocus: true
          = f.input :password_confirmation, label: t('users.password_confirmation'), required: true

        .form-actions
          = f.button :submit, t('users.set_new_password'), class: 'btn btn-primary btn-block'
          = render 'devise/shared/links'
