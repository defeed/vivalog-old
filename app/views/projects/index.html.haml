%h1
  Projects
  %span
    = link_to fa_icon('plus'), new_project_path, class: 'btn btn-success'

%table.table.table.bordered
  %thead
    %tr
      %th Title
      %th Volume
      %th Price
      %th Date
      %th
  %tbody
    - @projects.each do |project|
      %tr
        %td= project.title
        %td= project.volume
        %td= project.price
        %td= project.created_at
        %td
          = link_to fa_icon('eye'), project_path(project), class: 'btn btn-xs btn-default'
          = link_to fa_icon('edit'), edit_project_path(project), class: 'btn btn-xs btn-default'
          = link_to fa_icon('trash-o'), project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'
