- if can? :update, User
  = simple_form_for(@user, html: { class: 'form-inline' }) do |form|
    = form.error_notification
    .form-group
      = form.input :name, label: false, placeholder: 'Name'
    .form-group
      = form.input :email, label: false, placeholder: 'E-mail'
    - if can? :manage, User
      .form-group
        = form.input :role, collection: roles_for_select, prompt: 'Choose Role', label: false
    %hr
    .form-actions
      = form.submit 'Update details', class: 'btn btn-primary'
      = link_to 'Reset password', reset_password_user_path(@user), class: 'btn btn-default', data: { confirm: 'Are you sure?' }
      - if can? :manage, User
        = link_to activate_button_text(@user.is_active?), toggle_active_user_path(@user), class: 'btn btn-default', method: :patch
